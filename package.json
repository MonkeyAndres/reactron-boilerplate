{
  "name": "reactron-boilerplate",
  "version": "0.1.0",
  "description": "",
  "main": "main.js",
  "productName": "Reactron",
  "scripts": {
    "build": "npm run prebuild && parcel build public/index.html --public-url ./ -d build",
    "dev": "concurrently \"parcel public/index.html\" \"wait-on http://localhost:1234/ && electron .\"",
    "format": "prettier-standard 'src/**/*.js'",
    "prebuild": "rm -rf build",
    "package": "npm run build && electron-packager .",
    "package-mac": "npm run build && electron-packager . --platform=darwin",
    "package-win": "npm run build && electron-packager . --platform=win32",
    "package-linux": "npm run build && electron-packager . --platform=linux",
    "start": "npm run build && ELECTRON_IS_DEV=0 electron ."
  },
  "keywords": [],
  "author": "@monkeyandres",
  "license": "ISC",
  "dependencies": {
    "react": "^16.6.1",
    "react-dom": "^16.6.1"
  },
  "devDependencies": {
    "app": "^0.1.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^4.0.1",
    "electron": "^3.0.8",
    "electron-devtools-installer": "^2.2.4",
    "electron-is-dev": "^1.0.1",
    "electron-packager": "^12.2.0",
    "parcel-bundler": "^1.10.3",
    "prettier-standard": "^8.0.1",
    "wait-on": "^3.2.0"
  }
}
